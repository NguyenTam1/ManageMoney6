<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_nec">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nec"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtvNec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0324fc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/so_tien_da_dung_nec"/>
        <EditText
            android:id="@+id/edtUsedNec"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/hay_nhap_so_tien_da_dung"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btnNecOk"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:background="@null"
                android:layout_marginRight="30dp"
                android:textColor="#0307f7"/>
            <Button
                android:id="@+id/btnNecCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Cancel"
                android:textColor="#0307f7"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>